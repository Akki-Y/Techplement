<h1 class="mb-4">Login Page </h1>

<%= form_with url: login_path, data: { turbo: false } do |form| %>
  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Log In", class: "btn btn-primary" %>
    <%= link_to 'Sign Up', sign_up_path, class: "btn btn-secondary ms-2" %>
    <%= link_to 'Forgot your password?', new_resetpassword_path, class: "btn btn-link ms-2" %>
  </div>
<%end%>


